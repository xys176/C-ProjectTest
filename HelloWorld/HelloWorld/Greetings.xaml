<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid FlowDirection="LeftToRight" Background="#FF1B9DB6">
        <TextBlock x:Name="textBlock" Margin="347,99,347,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="1.485,0.522" Height="26"><Run Language="zh-cn" Text="选择并点击" FontSize="20"/></TextBlock>
        <RadioButton x:Name="HelloButton" Content="你好" IsChecked="True" HorizontalAlignment="Left" Margin="199,202,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="ByeButton" Content="再见" IsChecked="True" HorizontalAlignment="Left" Margin="505,206,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.592,1.654" Checked="RadioButton_Checked"/>
        <Button Content="显示" HorizontalAlignment="Center" Margin="0,297,0,0" VerticalAlignment="Top" Click="Button_Click" Height="43" Width="106"/>

    </Grid>
</Window>
